# Prevent WordPress from intercepting this file
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /Voter/
    
    # Don't let WordPress handle PHP files in this directory
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_FILENAME} \.php$
    RewriteRule ^(.*)$ - [L]
</IfModule>

# Enable CORS for WhatsApp API Proxy
<IfModule mod_headers.c>
    # Allow CORS from any origin
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "POST, OPTIONS, GET"
    Header always set Access-Control-Allow-Headers "Content-Type, Accept, Authorization, apikey"
    Header always set Access-Control-Max-Age "3600"
    
    # Handle preflight OPTIONS requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

# Prevent WordPress from interfering with this directory
<IfModule mod_rewrite.c>
    # Force direct PHP execution
    RewriteCond %{REQUEST_URI} ^/Voter/.*\.php$
    RewriteRule ^(.*)$ - [L]
</IfModule>
